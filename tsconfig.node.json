{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "vitest/globals"],
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["vite.config.ts"],
  "exclude": ["vite.config.ts.*"]
}
